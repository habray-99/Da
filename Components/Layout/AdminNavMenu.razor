@inject Microsoft.JSInterop.IJSRuntime JSRuntime
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Draft</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="AdminHome" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> AdminHome
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="AddAddOns">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Coffee Add Ons
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="AddCoffees">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Coffees
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="AddUsers">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Users
            </NavLink>
        </div>
        
    </nav>
    
    <button @onclick="OpenPopup">Logout</button>
</div>
@code {
    private async Task OpenPopup()
    {
        await JSRuntime.InvokeVoidAsync("showPopup");
    }
    private async Task ConfirmExit()
    {
        // Add your exit logic here
        Console.WriteLine("Exiting...");
        await ClosePopup();
    }

    private async Task ClosePopup()
    {
        await JSRuntime.InvokeVoidAsync("hidePopup");
    }
}