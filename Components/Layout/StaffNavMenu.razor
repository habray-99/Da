@inject Microsoft.JSInterop.IJSRuntime JSRuntime
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Draft</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="StaffHome" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="AddCustomer" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Add Customer
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="PlaceOrder" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Place Order
            </NavLink>
        </div>
    </nav>
    <button @onclick="OpenPopup">Logout</button>
    
    @code {
        private async Task OpenPopup()
        {
            await JSRuntime.InvokeVoidAsync("showPopup");
        }
        private async Task ConfirmExit()
        {
            // Add your exit logic here
            Console.WriteLine("Exiting...");
            await ClosePopup();
        }
    
        private async Task ClosePopup()
        {
            await JSRuntime.InvokeVoidAsync("hidePopup");
        }
    }
</div>
